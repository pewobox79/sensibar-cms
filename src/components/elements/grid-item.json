{
  "collectionName": "components_elements_grid_items",
  "info": {
    "displayName": "gridItem",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "blocks"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "link": {
      "type": "component",
      "component": "elements.link",
      "repeatable": false
    },
    "image": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "hasIcon"
            },
            true
          ]
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "hasIcon": {
      "type": "boolean",
      "default": true
    },
    "border": {
      "type": "component",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "hasIcon"
            },
            false
          ]
        }
      },
      "component": "elements.border-style",
      "repeatable": false
    }
  }
}
